cout <<"\n---------------------------------------------------------------------------\n\n";
cout<<"\n\nPressione qualquer tecla para voltar ao menu";
	getch();
}


void apagar_menu(){
	int x,y;
	cordenadas a;
	a.gotoxy(x,y);
	a.gotoxy(25,5);
		cout <<"                                \n"; 
		a.gotoxy(25,6);
		cout <<"                                 "; 
		a.gotoxy(25,7);
		cout <<"                                \n";
		a.gotoxy(29,9);
		cout <<"            ";
		a.gotoxy(29,10);
		cout<<"            ";	 
		a.gotoxy(29,11);
		cout <<"                  ";
		a.gotoxy(29,16);
		cout <<"            ";
		cout <<"            ";
}


int main(){
	int x,y;

    cordenadas s;
	s.gotoxy(x,y);
	do{
		system("cls");
		s.gotoxy(25,5); 
		cout <<"||||||||||||||||||||||||||||||||\n"; 
		s.gotoxy(25,6); 
		cout <<"|       | SPACE SHOOTER |      | "; 
		s.gotoxy(25,7);  
		cout <<"||||||||||||||||||||||||||||||||\n";
		s.gotoxy(29,9);  
		cout <<"* 1 - JOGAR	";
		s.gotoxy(29,10); 
		cout<<"* 2 - MANUAL";	 
		s.gotoxy(29,11); 
		cout <<"* 3 - SAIR DO JOGO";
		s.gotoxy(29,16);
		cout <<"Selecione:  ";
		char op = getche();
		

		
		if( op=='1') {
		apagar_menu();
		playy();
		}
		else if( op=='2')
		instrucao();
		else if( op=='3')
		exit(0);
		cout <<"\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n";
	} while(1);
	

return 0;

}
